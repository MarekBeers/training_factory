<div class="d-flex">
    <div class="p-2 d-none d-sm-none d-md-block">
        <img class="rounded" style="width: 200px;" src="{{ asset('images/kickboxing.png') }}">
    </div>
    <div class="p-2">
        <h1 style="color: red; font: 3rem 'Bauhaus 93'" class="d-none d-sm-block">Training Centrum <br> Den Haag
        </h1>
        <h1 style="color: red; font: 2rem 'Bauhaus 93'" class="d-block d-sm-none">Training Centrum <br> Den Haag
        </h1>
    </div>
    {% if app.user %}
        <div class="p-2 ml-auto text-danger" style="text-align: right">
            <h4>Je bent ingelogt als: <br><br> - {{ app.user.username }} - </h4><br> <a type="button" class="btn btn-outline-danger" href="{{ path('app_logout') }}">Uitloggen</a>
        </div>
    {% else %}
        <form class="p-2 ml-auto text-danger" style="text-align: right">
            <h4><br> U kunt hier klikken <br> om te inloggen</h4>
            <a type="button" href="/login" class="btn btn-outline-danger">Inloggen</a>
        </form>
    {% endif %}
</div>
