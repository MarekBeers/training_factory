        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item" {% if app.request.get('_route') == 'home' %} style="font-weight: bold" {% endif %}>
                <a class="nav-link text-danger" {% if app.request.get('_route') != 'home' %} href="/" {% endif %}>Home</a>
            </li>
            <li class="nav-item" {% if app.request.get('_route') == 'trainingaanbod' %} style="font-weight: bold" {% endif %}>
                <a class="nav-link text-danger" {% if app.request.get('_route') != 'trainingaanbod' %} href="/trainingaanbod" {% endif %}>Training
                    Aanbod</a>
            </li>
            <li class="nav-item" {% if app.request.get('_route') == 'contact' %} style="font-weight: bold" {% endif %}>
                <a class="nav-link text-danger" {% if app.request.get('_route') != 'contact' %} href="/contact" {% endif %}>Contact
