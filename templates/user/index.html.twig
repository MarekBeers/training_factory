{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Loginname</th>
                <th>Password</th>
                <th>Firstname</th>
                <th>Preprovision</th>
                <th>Lastname</th>
                <th>Dateofbirth</th>
                <th>Gender</th>
                <th>Hiring_date</th>
                <th>Salary</th>
                <th>Street</th>
                <th>Postal_code</th>
                <th>Place</th>
                <th>Roles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.loginname }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.preprovision }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.dateofbirth }}</td>
                <td>{{ user.gender }}</td>
                <td>{{ user.hiringDate }}</td>
                <td>{{ user.salary }}</td>
                <td>{{ user.street }}</td>
                <td>{{ user.postalCode }}</td>
                <td>{{ user.place }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="16">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
