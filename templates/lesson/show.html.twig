{% extends 'base.html.twig' %}

{% block title %}Lesson{% endblock %}

{% block content %}
    <h1>Lesson</h1>
    {% if app.user.id == lesson.instructeur.id %}
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ lesson.id }}</td>
                </tr>

                <tr>
                    <th>Training</th>
                    <td>{{ lesson.trainingId.naam }}</td>
                </tr>
                <tr>
                    <th>Time</th>
                    <td>{{ lesson.time ? lesson.time|date('H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ lesson.date ? lesson.date|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Location</th>
                    <td>{{ lesson.location }}</td>
                </tr>
                <tr>
                    <th>Max Personen</th>
                    <td>{{ lesson.maxPersons }}</td>
                </tr>
            </tbody>
        </table>

        <a type="button" class="btn btn-outline-success" href="{{ path('lesson_index') }}">terug</a>

        <a type="button" class="btn btn-outline-warning" href="{{ path('lesson_edit', {'id': lesson.id}) }}">edit</a>

        {{ include('lesson/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
