{% extends 'base.html.twig' %}

{% block title %}Training{% endblock %}

{% block content %}
    <h1>Training</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ training.id }}</td>
            </tr>
            <tr>
                <th>Naam</th>
                <td>{{ training.naam }}</td>
            </tr>
            <tr>
                <th>Beschrijving</th>
                <td>{{ training.description }}</td>
            </tr>
            <tr>
                <th>Tijd</th>
                <td>{{ training.duration ? training.duration|date('H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Kosten</th>
                <td>{{ training.costs }}</td>
            </tr>

        </tbody>
        <img class="img-fluid rounded " src="{{ asset('uploads/brochures/' ~ training.BrochureFilename) }}" alt="">

    </table>

    <a type="button" class="btn btn-outline-success" href="{{ path('training_index') }}">Terug</a>

    <a type="button" class="btn btn-outline-warning" href="{{ path('training_edit', {'id': training.id}) }}">edit</a>

    {{ include('training/_delete_form.html.twig') }}
{% endblock %}
